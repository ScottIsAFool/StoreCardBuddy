<?xml version="1.0" encoding="utf-8"?>
<Application x:Class="StoreCardBuddy.WindowsRT.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:StoreCardBuddy.WindowsRT"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:StoreCardBuddy.WindowsRT.ViewModel" xmlns:system="using:System"
             xmlns:model="using:StoreCardBuddy.Model"
             mc:Ignorable="d"
             RequestedTheme="Light">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- 
                    Styles that define common aspects of the platform look and feel
                    Required by Visual Studio project and item templates
                 -->
                <ResourceDictionary Source="Common/StandardStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <vm:ViewModelLocator x:Key="Locator"
                                 d:IsDataSource="True" />
            <system:String x:Key="AppName">Store Card Buddy</system:String>
            <SolidColorBrush x:Key="AppBackground">#89FFD559</SolidColorBrush>

            <model:CardProviders x:Key="CardProviders"
                                 x:Name="TheCardProviders" />
        </ResourceDictionary>
    </Application.Resources>
</Application>